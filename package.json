  "main": "src/index.js",
  "scripts": {
    "start": "node ./",
    "dev": "npm run setup:dev && NODE_ENV=development nodemon",
    "dev:vagrant": "npm run setup:dev && NODE_ENV=development nodemon -L",
    "test": "npm run setup:test && find ./src -name '*.test.js' | NODE_ENV=test xargs mocha --exit --opts tests/mocha.opts",
    "test:file": "npm run setup:test && NODE_ENV=test mocha --exit --opts tests/mocha.opts",
    "lint": "eslint src/*",
    "lint:fix": "eslint --fix src/*",
    "setup:dev": "saudify-env --development",
    "setup:test": "saudify-env --test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Saudify/saudify-api.git"
